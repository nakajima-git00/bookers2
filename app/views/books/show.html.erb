<%= flash[:success] %>
<div class='container px-5 px-sm-0'>
  <div class='row'>

    <%= render 'books/book', {user: @user, book: @new_book} %>

    <div class='col-md-8 offset-md-1'>
    <h2>Book detail</h2>
      <table class='table'>
        <tr>
          <td>
            <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %><br>
            <%= link_to @user.name, user_path(@book.user_id) %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @user.id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %></td>
          <% else %>
            <td></td>
            <td></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>